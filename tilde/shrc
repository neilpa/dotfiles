# set prompt: ``pwd $ ''
PS1="\w \$ "

# some basics
export EDITOR=vim
export PAGER=less

export LSCOLORS=exfxcxdxbxegedabagacad
export CLICOLOR=true

# some useful (default) aliases
alias h='fc -l'
alias j=jobs
alias l='ls -l'
alias g='egrep -i'
 
alias la='ls -laFo'
alias ll='ls -lFo'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias gob='go build'
alias got='go test'
alias gor='go run'

# Dump a man page and cleanup formatting
man-cat() {
	man -P cat "$@" | col -b
}
