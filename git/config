[user]
	name = Neil Pankey
	email = npankey@gmail.com

[push]
	default = simple
[pull]
	rebase = preserve
[fetch]
	prune = true

[diff]
	indentHeuristic = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "odd"]
        cmd = "odd.exe $LOCAL $REMOTE"
[difftool]
	prompt = false

[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
	keepBackup = false

[rerere]
	enabled = 1


[url "https://github.com/"]
	insteadOf = git://github.com/
	insteadOf = git@github.com:

[alias]
	co = checkout
	ci = commit

	st = status --short --branch
	stat = status

	d = diff
	dh = diff HEAD
	dh1 = diff HEAD~1
	dw = diff --word-diff

	dt = difftool
	dtc = difftool --cached
	dth = difftool HEAD
	dth1 = difftool HEAD~1

	current-branch = symbolic-ref --short HEAD
	cb = !git current-branch

	blog = for-each-ref --sort=committerdate refs/heads/ --format='%(color:red)%(objectname:short)%(color:reset)%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

	graph = log --graph --abbrev-commit --decorate
	lgf1 = !"git graph --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'"
	lgf2 = !"git graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'"
	lgf3 = log --graph --format=format:'%C(bold blue)%h %Creset%an %C(bold green)(%ar) %C(yellow)%d%n        %Creset%s%n'

	lg1 = !"git lgf1 --tags"
	lg2 = !"git lgf2 --tags"
	lg3 = !"git lgf3 --tags"
	lg = !"git lg1 $(git current-branch)"
	ahead = !"git lg1 --branches --not --remotes"

	rm-ignored = !git ls-files -ci --exclude-standard -z | xargs -0 git rm --cached

[hub]
	protocol = https

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
