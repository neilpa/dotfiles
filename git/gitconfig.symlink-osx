# OSX specific settings for git
[credential]
	helper = osxkeychain

[diff]
	tool = Kaleidoscope
[merge]
	tool = Kaleidoscope

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
